{
  "compilerOptions": {
    "module": "esnext",
    "allowJs": true,

    "types": ["react", "react-native"],

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "isolatedModules": true,
    "jsx": "react-native",

    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,

    "target": "esnext"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "App.tsx"],
  "extends": "expo/tsconfig.base"
}
